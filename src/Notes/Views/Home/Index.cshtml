
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-theme.min.css" />

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/angular/angular.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>

<style>
    .list-width { width: 200px; height: 100%; padding: 0px }
    .box { float: left }

    .removeableParent { cursor: pointer }
    .removeableParent:hover .removeable { display: inline-block; position:absolute; right:5px; top: 15px }
    .removeableParent .removeable { display: none }


    html, body
    {
        height: 100%;
    }
</style>

<html ng-app="Notes">
    <body ng-cloak>
        <div ng-controller="homeCtrl">
            <div class="box list-width">
                <button ng-click="addGroup()">Add</button>
                <ul class="nav nav-pills nav-stacked">
                    <li role="presentation" ng-repeat="group in groups track by $index" ng-click="selectGroup(group)" ng-class="isGroupActive(group)" class="removeableParent">
                        <a>
                            {{group.name}}
                        </a>
                        
                        <span ng-click="deleteGroup($index)" class="glyphicon glyphicon-remove removeable"></span>
                    </li>
                </ul>
            </div>
            

            <div class="box list-width">
                <button ng-click="addNote()">Add</button>
                <ul class="nav nav-pills nav-stacked">
                    <li class="removeableParent" ng-repeat="note in selectedGroup.notes track by $index" ng-class="isNoteActive(note)" ng-click="selectNote(note)">
                        <a>
                            {{note.name}}
                            <span ng-click="deleteNote($index)" class="glyphicon glyphicon-remove removeable"></span>
                        </a>
                    </li>
                    
                </ul>
            </div>

         
            <div style="margin-left:400px;">
                <textarea ng-change="save()" ng-model="selectedNote.text" style="width:100%; height:100%">
                </textarea>
            </div>
        </div>
    </body>
</html>


<script src="~/js/controllers/homeCtrl.js"></script>